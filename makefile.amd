CLINC = $(AMDAPPSDKROOT)/include/
CLLIB = $(AMDAPPSDKROOT)/lib/x86_64 -l OpenCL

# put header files here
_DEPS = oclutil.h makefile.amd sad.h

# put object files here
_OBJS = oclutil.o reduce.o matrixMul.o sad.o


IDIR =.
ODIR=amd
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))
OBJS = $(patsubst %,$(ODIR)/%,$(_OBJS))
CC=gcc


all: $(ODIR)/reduce $(ODIR)/matrixMul $(ODIR)/sad

# put executable here
$(ODIR)/reduce: $(ODIR)/oclutil.o $(ODIR)/reduce.o
	gcc -o $@ $^ -L $(CLLIB) $(MACRODEF)

$(ODIR)/matrixMul: $(ODIR)/oclutil.o $(ODIR)/matrixMul.o
	gcc -o $@ $^ -L $(CLLIB) $(MACRODEF)

$(ODIR)/sad: $(ODIR)/oclutil.o $(ODIR)/sad.o
	gcc -o $@ $^ -L $(CLLIB) $(MACRODEF)


$(ODIR)/%.o: %.c $(DEPS)
	mkdir -p $(ODIR)
	$(CC) -c -o $@ $< -I $(CLINC) $(MACRODEF)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ $(INCDIR)/*~ 



